<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalahActivity"
    android:background="@color/red">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALAH"
        android:textColor="@color/white"
        android:fontFamily="@font/gameria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:textSize="40sp"
        android:id="@+id/txtSalah" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jawaban yang Benar adalah"
        android:fontFamily="@font/gameria"
        android:textColor="@color/white"
        android:layout_below="@id/txtSalah"
        android:layout_centerHorizontal="true"
        android:id="@+id/descJawaban"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/jawaban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descJawaban"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gameria"
        android:text="Oxygen"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLanjut"
        android:layout_below="@id/jawaban"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gameria"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnHome"
        android:layout_below="@id/btnLanjut"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gameria"
        android:textColor="@color/white"
        />

</RelativeLayout>